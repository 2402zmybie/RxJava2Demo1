<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demo1"
            android:onClick="demo1"
            android:text="demo1"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demo2"
            android:onClick="demo2"
            android:text="变换操作符map"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demo3"
            android:onClick="demo3"
            android:text="变换操作符flatMap"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="demo4"
            android:text="变换操作符concatMap"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="demo5"
            android:text="变换操作符groupBy"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="demo6"
            android:text="变换操作符buffer"
    />


    <Button
            android:id="@+id/bt_fillter"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btFillter"
            android:text="过滤操作符"
    />

</LinearLayout>